{
  "name": "atool-build",
  "version": "0.8.0",
  "description": "Build tool based on webpack",
  "repository": {
    "type": "git",
    "url": "https://github.com/ant-tool/atool-build"
  },
  "homepage": "https://github.com/ant-tool/atool-build",
  "author": "chencheng <sorrycc@gmail.com>",
  "license": "MIT",
  "bin": {
    "atool-build": "./bin/atool-build"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "rm -rf lib && babel src --out-dir lib",
    "test": "babel-node $(npm bin)/babel-istanbul cover $(npm bin)/_mocha -- --no-timeouts",
    "debug": "$(npm bin)/mocha --require babel-core/register --no-timeouts",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "$(npm bin)/eslint --ext .js src",
    "pub": "npm run build && npm publish && rm -rf lib && git push origin"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "atool-monitor": "0.x",
    "autoprefixer": "^6.4.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-runtime": "^6.11.6",
    "case-sensitive-paths-webpack-plugin": "^1.1.4",
    "chalk": "^1.1.3",
    "commander": "^2.9.0",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "find-cache-dir": "^0.1.1",
    "fs-exists-sync": "^0.1.0",
    "json-loader": "^0.5.4",
    "less": "~2.6.0",
    "less-loader": "^2.2.3",
    "less-plugin-npm-import": "^2.1.0",
    "lodash.clone": "^4.5.0",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isplainobject": "^4.0.6",
    "lodash.mergewith": "^4.6.0",
    "map-json-webpack-plugin": "~1.1.0",
    "postcss": "^5.2.0",
    "postcss-loader": "^0.13.0",
    "rucksack-css": "^0.8.6",
    "ts-loader": "^1.0.0-beta.1",
    "typescript": "^2.0.0",
    "url-loader": "^0.5.7",
    "webpack": "2.1.0-beta.25"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-istanbul": "^0.11.0",
    "coveralls": "^2.11.14",
    "eslint": "^3.8.0",
    "eslint-config-airbnb": "^12.0.0",
    "expect": "^1.20.2",
    "glob": "^7.0.6",
    "i18n-webpack-plugin": "^0.3.0",
    "mocha": "^3.0.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ]
  }
}